---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SidePanel from '../components/SidePanel.astro';
---
<BaseLayout
  title="Team Respawn - RTS Gaming with some cringe"
  description="Team Respawn is a thriving gaming channel led by Andy, dedicated to strategy lovers - especially fans of Halo Wars, Halo FPS, and Age of Empires. Watch full walkthroughs and in-depth strategy guides."
  keywords="Team Respawn, gaming walkthroughs, Halo Wars guides, Age of Empires guides, strategy games, video game guides, Halo FPS walkthroughs"
  canonical="https://www.teamrespawn.net/"
  ogTitle="Team Respawn - RTS Gaming with some cringe"
  ogDescription="Full walkthroughs and strategy guides for Halo Wars, Halo FPS, and Age of Empires."
  ogImage="https://www.teamrespawn.net/content/Team-Respawn-Full.png"
>
  <Fragment slot="head">
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Team Respawn",
        "url": "https://www.teamrespawn.net",
        "logo": "https://www.teamrespawn.net/content/Team-Respawn-Full.png",
        "description": "Gaming channel dedicated to strategy lovers - especially fans of Halo Wars, Halo FPS, and Age of Empires.",
        "sameAs": [
          "https://www.youtube.com/@TeamRespawn",
          "https://www.twitch.tv/TeamRespawnTV",
          "https://discord.gg/TeamRespawn"
        ]
      }
    </script>
  </Fragment>

  <a
    href="#main-content"
    class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:bg-white focus:text-black focus:px-4 focus:py-2 focus:rounded"
  >
    Skip to main content
  </a>

  <div class="container mx-auto p-4 sm:p-8">
    <Header />

    <main id="home-content" role="main" aria-label="Home content">
      <section
        id="twitch-embed-container"
        class="mb-8 rounded-xl overflow-hidden border-2 border-purple-600 bg-gradient-to-br from-gray-800 via-gray-800 to-purple-900/20 shadow-2xl opacity-100 visible translate-y-0"
      >
        <div class="p-4 sm:p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center gap-3">
              <h2 class="text-2xl sm:text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400 flex items-center gap-3">
                <i class="fab fa-twitch text-purple-400" aria-hidden="true"></i>
                Live on Twitch
              </h2>
              <button
                id="twitch-collapse-toggle"
                aria-label="Toggle Twitch stream visibility"
                aria-expanded="true"
                class="p-2 rounded-lg hover:bg-purple-600/30 transition-colors duration-200 text-purple-400 hover:text-purple-300"
                type="button"
              >
                <i class="fas fa-chevron-up transition-transform duration-300" id="twitch-collapse-icon" aria-hidden="true"></i>
              </button>
            </div>
            <a
              href="https://www.twitch.tv/teamrespawntv"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors duration-300 text-sm sm:text-base"
            >
              <i class="fas fa-external-link-alt" aria-hidden="true"></i>
              Watch on Twitch
            </a>
          </div>
          <div id="twitch-embed-content" class="twitch-content-expanded">
            <div class="aspect-video rounded-lg overflow-hidden border border-purple-500/30 shadow-lg">
              <iframe
                src="https://player.twitch.tv/?channel=teamrespawntv&parent=localhost&parent=127.0.0.1&parent=teamrespawn.net&parent=www.teamrespawn.net&parent=andythenerd.github.io&muted=false"
                frameborder="0"
                allowfullscreen="true"
                scrolling="no"
                allow="autoplay; fullscreen"
                title="Team Respawn TV Live Stream"
                class="w-full h-full"
              ></iframe>
            </div>
          </div>
        </div>
      </section>
    </main>

    <main id="walkthroughs-content" class="hidden flex flex-col gap-4" role="main" aria-label="Walkthroughs content">
      <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-3 bg-gray-800/60 border border-gray-700/60 rounded-xl px-4 py-3">
        <div class="flex flex-col">
          <span class="text-sm font-semibold text-gray-200">Sort walkthroughs</span>
          <span class="text-xs text-gray-400">Default: A -> Z</span>
        </div>
        <label class="flex items-center gap-2 text-sm text-gray-200" for="walkthroughs-sort-select">
          <span class="sr-only">Sort walkthroughs</span>
          <select
            id="walkthroughs-sort-select"
            class="bg-gray-900 border border-gray-700 rounded-lg px-3 py-2 text-sm text-gray-100 focus:outline-none focus:ring-2 focus:ring-purple-500"
            aria-label="Sort walkthroughs"
          >
            <option value="alpha">Alphabetical (A->Z)</option>
            <option value="reverse-alpha">Alphabetical (Z->A)</option>
            <option value="release-desc">Release date (newest)</option>
            <option value="release-asc">Release date (oldest)</option>
            <option value="series">Game series (A->Z)</option>
          </select>
        </label>
      </div>
      <div id="walkthroughs-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 lg:gap-8" aria-live="polite"></div>
    </main>

    <main id="halo-wars-content" class="hidden grid grid-cols-1 gap-8" role="main" aria-label="Halo Wars guides content"></main>

    <main id="age-of-empires-content" class="hidden grid grid-cols-1 gap-8" role="main" aria-label="Age of Empires guides content"></main>

    <main id="age-of-mythology-content" class="hidden grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" role="main" aria-label="Age of Mythology guides content"></main>

    <main id="other-projects-content" class="hidden other-projects-masonry" role="main" aria-label="Other projects content"></main>

    <Footer />
  </div>

  <SidePanel />

  <script src="/js/side-panel.js" is:inline></script>
  <script src="/js/tabs.js" is:inline></script>
  <script src="/js/dropdowns.js" is:inline></script>
  <script src="/js/video-card.js" is:inline></script>
  <script src="/js/project-card.js" is:inline></script>
  <script src="/js/home-content.js" is:inline></script>
  <script src="/js/main.js" is:inline></script>
</BaseLayout>
