---
const {
  title = 'Team Respawn',
  description,
  keywords,
  canonical,
  ogTitle,
  ogDescription,
  ogImage,
  ogType = 'website',
  twitterImage,
  robots = 'index, follow',
  author = 'Team Respawn',
  bodyClass = ''
} = Astro.props;

const canonicalUrl = canonical ?? (Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : undefined);
const resolvedOgTitle = ogTitle ?? title;
const resolvedOgDescription = ogDescription ?? description;
const resolvedTwitterImage = twitterImage ?? ogImage;
const isBlogRoute = Astro.url?.pathname?.startsWith('/blog');
const rawBodyClasses = [bodyClass, isBlogRoute ? 'blog-page' : ''].filter(Boolean).join(' ');
const resolvedBodyClass = Array.from(new Set(rawBodyClasses.split(/\s+/).filter(Boolean))).join(' ');
const cloudinaryCloudName = import.meta.env.PUBLIC_CLOUDINARY_CLOUD_NAME || import.meta.env.CLOUDINARY_CLOUD_NAME || '';
const cloudflareAnalyticsToken = import.meta.env.PUBLIC_CF_ANALYTICS_TOKEN || '';
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    {keywords && <meta name="keywords" content={keywords} />}
    <meta name="author" content={author} />
    <meta name="robots" content={robots} />
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}

    {canonicalUrl && <meta property="og:url" content={canonicalUrl} />}
    <meta property="og:type" content={ogType} />
    <meta property="og:title" content={resolvedOgTitle} />
    {resolvedOgDescription && <meta property="og:description" content={resolvedOgDescription} />}
    {ogImage && <meta property="og:image" content={ogImage} />}
    <meta property="og:site_name" content="Team Respawn" />

    <meta name="twitter:card" content="summary_large_image" />
    {canonicalUrl && <meta name="twitter:url" content={canonicalUrl} />}
    <meta name="twitter:title" content={resolvedOgTitle} />
    {resolvedOgDescription && <meta name="twitter:description" content={resolvedOgDescription} />}
    {resolvedTwitterImage && <meta name="twitter:image" content={resolvedTwitterImage} />}

    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta http-equiv="X-Frame-Options" content="SAMEORIGIN" />
    <meta http-equiv="Referrer-Policy" content="strict-origin-when-cross-origin" />

    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/favicon-192x192.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="shortcut icon" href="/favicon-32x32.png" />
    <script src="https://cdn.tailwindcss.com" is:global></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="alternate" type="application/rss+xml" title="Team Respawn RSS Feed" href="/rss.xml" />
  <link rel="stylesheet" href="/css/styles.css" />
    <script src="https://cdn.jsdelivr.net/npm/dompurify@3.0.6/dist/purify.min.js" crossorigin="anonymous"></script>
    {cloudinaryCloudName && (
      <script is:inline set:html={`window.__CLOUDINARY_CLOUD_NAME__ = ${JSON.stringify(cloudinaryCloudName)};`}></script>
    )}
    {cloudflareAnalyticsToken && (
      <script
        defer
        src="https://static.cloudflareinsights.com/beacon.min.js"
        data-cf-beacon={`{"token":"${cloudflareAnalyticsToken}"}`}
      ></script>
    )}
    <slot name="head" />
  </head>
  <body class={`bg-gray-900 text-white ${resolvedBodyClass}`.trim()}>
    <slot />
  </body>
</html>
