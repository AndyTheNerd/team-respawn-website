---
import BaseLayout from './BaseLayout.astro';
import BlogHeader from '../components/BlogHeader.astro';
import BlogSidebar from '../components/BlogSidebar.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import SidePanel from '../components/SidePanel.astro';
import ShareButtons from '../components/ShareButtons.astro';
import Author from '../blocks/Author/Author.astro';
import CloudinaryImage from '../components/CloudinaryImage.astro';
import authorInfo from '../data/authorInfo.js';

interface Props {
  title: string;
  description: string;
  category: string;
  publishedDate: string;
  dateIso: string;
  ogImage?: string;
  youtubeId?: string;
  tags?: string[];
}

const {
  title,
  description,
  category,
  publishedDate,
  dateIso,
  ogImage,
  youtubeId,
  tags
} = Astro.props;

const slug = Astro.url.pathname.split('/').pop();
const canonical = `https://www.teamrespawn.net${Astro.url.pathname}`;
const resolvedOgImage = ogImage ? `https://www.teamrespawn.net${ogImage}` : undefined;

// JSON-LD structured data for Article
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description,
  "image": resolvedOgImage,
  "datePublished": dateIso,
  "dateModified": dateIso,
  "author": {
    "@type": "Organization",
    "name": "Team Respawn",
    "url": "https://www.teamrespawn.net"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Team Respawn",
    "logo": {
      "@type": "ImageObject",
      "url": "https://www.teamrespawn.net/content/Team-Respawn-Full.png"
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": canonical
  }
};

// Add video object if YouTube ID is provided
if (youtubeId) {
  jsonLd["video"] = {
    "@type": "VideoObject",
    "name": title,
    "description": description,
    "thumbnailUrl": `https://img.youtube.com/vi/${youtubeId}/maxresdefault.jpg`,
    "uploadDate": dateIso,
    "embedUrl": `https://www.youtube.com/embed/${youtubeId}`
  };
}
---
<BaseLayout
  title={`${title} | Team Respawn Blog`}
  description={description}
  canonical={canonical}
  ogTitle={title}
  ogDescription={description}
  ogImage={resolvedOgImage}
  ogType="article"
  bodyClass="blog-page"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  </Fragment>

  <div class="container mx-auto p-4 sm:p-8">
    <Header />
    <BlogHeader />

    <div class="max-w-6xl mx-auto flex flex-col lg:flex-row gap-8">
      <!-- Sidebar (appears first on mobile, moves to right on desktop) -->
      <div class="lg:order-2 lg:w-64 lg:flex-shrink-0">
        <BlogSidebar category={category} title={title}>
          <ShareButtons url={canonical} title={title} />
        </BlogSidebar>
      </div>

      <!-- Main Content -->
      <main class="flex-1 min-w-0">
        <h1 class="text-4xl font-bold mb-2 text-cyan-400">{title}</h1>
        <p class="text-gray-400 text-sm mb-8">
          <time datetime={dateIso}>{publishedDate}</time> by Team Respawn
        </p>

        {tags?.length ? (
          <div class="flex flex-wrap gap-2 mb-6">
            {tags.map(tag => (
              <a 
                href={`/blog?tag=${encodeURIComponent(tag.toLowerCase())}`}
                class="text-xs font-semibold uppercase tracking-wide bg-gray-800 text-cyan-200 border border-cyan-500/30 rounded-full px-3 py-1 inline-block transition-all duration-200 hover:bg-cyan-800 hover:border-cyan-400 hover:text-white focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:ring-offset-2 focus:ring-offset-gray-900"
              >
                {tag}
              </a>
            ))}
          </div>
        ) : null}

        {youtubeId && (
          <div class="aspect-video mb-8 rounded-lg overflow-hidden shadow-lg">
            <iframe
              src={`https://www.youtube.com/embed/${youtubeId}`}
              title={title}
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
              class="w-full h-full"
            ></iframe>
          </div>
        )}

        <div class="prose prose-invert text-gray-300">
          <slot />
        </div>

        <!-- Halo Wars 2 Strategy AI Call to Action -->
        {tags?.includes('Halo Wars 2') && (
          <section class="mt-8 bg-gradient-to-r from-cyan-900/30 to-blue-900/30 rounded-xl p-6 border border-cyan-500/30">
            <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 mb-4">
              <div class="flex items-center gap-3">
                <i class="fab fa-discord text-cyan-400 text-3xl" aria-hidden="true"></i>
                <h2 class="text-2xl sm:text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-400">
                  Master Halo Wars 2 with AI
                </h2>
              </div>
              <div class="flex flex-col sm:flex-row gap-2">
                <a href="/storehaus-info" class="inline-flex items-center justify-center bg-cyan-600 hover:bg-cyan-700 px-4 py-2 rounded-lg text-white font-semibold transition-colors duration-300">
                  <i class="fas fa-info-circle mr-2" aria-hidden="true"></i>
                  Learn More
                </a>
                <a href="/storehaus" target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center bg-purple-600 hover:bg-purple-700 px-4 py-2 rounded-lg text-white font-semibold transition-colors duration-300">
                  <i class="fab fa-discord mr-2" aria-hidden="true"></i>
                  Add to Discord
                </a>
              </div>
            </div>
            <p class="text-gray-300 mb-6 text-base sm:text-lg">
              Level up your Halo Wars 2 gameplay with our AI-powered strategy advisor Storehaus! Get instant answers to your tactical questions, leader guides, and advanced strategies.
            </p>
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
              <div class="bg-gray-800/60 p-4 rounded-lg border border-gray-700/60 hover:border-cyan-500/40 transition-colors duration-300">
                <i class="fas fa-robot text-cyan-400 text-2xl mb-2" aria-hidden="true"></i>
                <h3 class="font-semibold text-cyan-200 mb-1">AI Strategy Advisor</h3>
                <p class="text-sm text-gray-400">RAG-powered tactical tips and build orders</p>
              </div>
              <div class="bg-gray-800/60 p-4 rounded-lg border border-gray-700/60 hover:border-cyan-500/40 transition-colors duration-300">
                <i class="fas fa-chess text-cyan-400 text-2xl mb-2" aria-hidden="true"></i>
                <h3 class="font-semibold text-cyan-200 mb-1">Leader Guides</h3>
                <p class="text-sm text-gray-400">Detailed strategies for all UNSC & Banished leaders</p>
              </div>
              <div class="bg-gray-800/60 p-4 rounded-lg border border-gray-700/60 hover:border-cyan-500/40 transition-colors duration-300">
                <i class="fas fa-lightbulb text-cyan-400 text-2xl mb-2" aria-hidden="true"></i>
                <h3 class="font-semibold text-cyan-200 mb-1">Tactical Questions</h3>
                <p class="text-sm text-gray-400">Instant answers to your gameplay questions</p>
              </div>
            </div>
          </section>
        )}

        <!-- Author Block -->
        <div class="mt-12 pt-8 border-t border-gray-700">
          <h2 class="text-lg font-semibold text-gray-400 mb-4">About the Author</h2>
          <Author {...authorInfo} className="bg-gray-800/50 border border-gray-700" />
        </div>
      </main>
    </div>
    <Footer />
  </div>

  <SidePanel />
  <script src="/js/dropdowns.js" is:inline></script>
  <script src="/js/tabs.js" is:inline></script>
  <script src="/js/side-panel.js" is:inline></script>
  <script src="/js/secondary-init.js" is:inline></script>
</BaseLayout>
