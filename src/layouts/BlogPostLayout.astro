---
import BaseLayout from './BaseLayout.astro';
import BlogHeader from '../components/BlogHeader.astro';
import BlogSidebar from '../components/BlogSidebar.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import SidePanel from '../components/SidePanel.astro';
import ShareButtons from '../components/ShareButtons.astro';
import Author from '../blocks/Author/Author.astro';
import CloudinaryImage from '../components/CloudinaryImage.astro';
import authorInfo from '../data/authorInfo.js';

interface Props {
  title: string;
  description: string;
  category: string;
  publishedDate: string;
  dateIso: string;
  ogImage?: string;
  youtubeId?: string;
  tags?: string[];
}

const {
  title,
  description,
  category,
  publishedDate,
  dateIso,
  ogImage,
  youtubeId,
  tags
} = Astro.props;

const slug = Astro.url.pathname.split('/').pop();
const canonical = `https://www.teamrespawn.net${Astro.url.pathname}`;
const resolvedOgImage = ogImage ? `https://www.teamrespawn.net${ogImage}` : undefined;

// JSON-LD structured data for Article
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description,
  "image": resolvedOgImage,
  "datePublished": dateIso,
  "dateModified": dateIso,
  "author": {
    "@type": "Organization",
    "name": "Team Respawn",
    "url": "https://www.teamrespawn.net"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Team Respawn",
    "logo": {
      "@type": "ImageObject",
      "url": "https://www.teamrespawn.net/content/Team-Respawn-Full.png"
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": canonical
  }
};

// Add video object if YouTube ID is provided
if (youtubeId) {
  jsonLd["video"] = {
    "@type": "VideoObject",
    "name": title,
    "description": description,
    "thumbnailUrl": `https://img.youtube.com/vi/${youtubeId}/maxresdefault.jpg`,
    "uploadDate": dateIso,
    "embedUrl": `https://www.youtube.com/embed/${youtubeId}`
  };
}
---
<BaseLayout
  title={`${title} | Team Respawn Blog`}
  description={description}
  canonical={canonical}
  ogTitle={title}
  ogDescription={description}
  ogImage={resolvedOgImage}
  ogType="article"
  bodyClass="blog-page"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  </Fragment>

  <div class="container mx-auto p-4 sm:p-8">
    <Header />
    <BlogHeader />

    <div class="max-w-6xl mx-auto flex flex-col lg:flex-row gap-8">
      <!-- Sidebar (appears first on mobile, moves to right on desktop) -->
      <div class="lg:order-2 lg:w-64 lg:flex-shrink-0">
        <BlogSidebar category={category} title={title}>
          <ShareButtons url={canonical} title={title} />
        </BlogSidebar>
      </div>

      <!-- Main Content -->
      <main class="flex-1 min-w-0">
        <h1 class="text-4xl font-bold mb-2 text-cyan-400">{title}</h1>
        <p class="text-gray-400 text-sm mb-8">
          <time datetime={dateIso}>{publishedDate}</time> by Team Respawn
        </p>

        {tags?.length ? (
          <div class="flex flex-wrap gap-2 mb-6">
            {tags.map(tag => (
              <a 
                href={`/blog?tag=${encodeURIComponent(tag.toLowerCase())}`}
                class="text-xs font-semibold uppercase tracking-wide bg-gray-800 text-cyan-200 border border-cyan-500/30 rounded-full px-3 py-1 inline-block transition-all duration-200 hover:bg-cyan-800 hover:border-cyan-400 hover:text-white focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:ring-offset-2 focus:ring-offset-gray-900"
              >
                {tag}
              </a>
            ))}
          </div>
        ) : null}

        {youtubeId && (
          <div class="aspect-video mb-8 rounded-lg overflow-hidden shadow-lg">
            <iframe
              src={`https://www.youtube.com/embed/${youtubeId}`}
              title={title}
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
              class="w-full h-full"
            ></iframe>
          </div>
        )}

        <div class="prose prose-invert text-gray-300">
          <slot />
        </div>

        <!-- Halo Wars 2 Strategy AI Call to Action -->
        {tags?.includes('Halo Wars 2') && (
          <div class="mt-8 p-6 bg-gradient-to-r from-cyan-900/30 to-blue-900/30 border border-cyan-500/30 rounded-lg">
            <div class="flex flex-col sm:flex-row items-center gap-6">
              <!-- Text and Buttons -->
              <div class="flex-1 text-center sm:text-left">
                <h3 class="text-xl font-bold text-cyan-300 mb-3">Got more questions?</h3>
                <p class="text-gray-300 mb-6">
                  Ask our Halo Wars 2 Strategy AI with the Storehaus Discord bot!
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center sm:justify-start">
                  <a 
                    href="https://discord.com/oauth2/authorize?client_id=1446587655541227552&permissions=117760&integration_type=0&scope=bot" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="inline-flex items-center px-6 py-3 bg-purple-600 hover:bg-purple-500 text-white font-semibold rounded-lg transition-all duration-200 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:ring-offset-2 focus:ring-offset-gray-900"
                  >
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"/>
                    </svg>
                    Invite to your Discord Server
                  </a>
                  <a 
                    href="https://discord.gg/teamrespawn" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="inline-flex items-center px-6 py-3 bg-cyan-600 hover:bg-cyan-500 text-white font-semibold rounded-lg transition-all duration-200 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:ring-offset-2 focus:ring-offset-gray-900"
                  >
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Ask in the TR Server
                  </a>
                </div>
              </div>
              <!-- Banner -->
              <a href="https://www.teamrespawn.net/storehaus-info" target="_blank" rel="noopener noreferrer" class="flex-shrink-0 rounded-xl overflow-hidden border border-gray-700/60 max-w-xs hover:border-purple-500/50 transition-colors duration-200">
                <img src="/content/Banner.jpg" alt="Storehaus RTS" class="w-full h-auto object-cover" width="400" height="225" />
              </a>
            </div>
          </div>
        )}

        <!-- Author Block -->
        <div class="mt-12 pt-8 border-t border-gray-700">
          <h2 class="text-lg font-semibold text-gray-400 mb-4">About the Author</h2>
          <Author {...authorInfo} className="bg-gray-800/50 border border-gray-700" />
        </div>
      </main>
    </div>
    <Footer />
  </div>

  <SidePanel />
  <script src="/js/dropdowns.js" is:inline></script>
  <script src="/js/tabs.js" is:inline></script>
  <script src="/js/side-panel.js" is:inline></script>
  <script src="/js/secondary-init.js" is:inline></script>
</BaseLayout>
