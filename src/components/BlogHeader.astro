---
const {
  showFilters = false,
  title = 'Video Game Blog',
  subtitle = 'News, reviews, and insights from the gaming world.'
} = Astro.props;
---
<header class="flex justify-between items-center py-6 mb-8">
  {showFilters ? (
    <button
      id="blog-filter-toggle"
      class="p-2 rounded-full hover:bg-gray-800 transition-colors duration-200 lg:hidden"
      aria-label="Open blog filters"
      aria-expanded="false"
      aria-controls="blog-filter-panel"
      type="button"
    >
      <i class="fas fa-sliders-h text-2xl text-gray-400" aria-hidden="true"></i>
    </button>
  ) : (
    <div class="h-8 w-8" aria-hidden="true"></div>
  )}

  <div class="flex-grow text-center">
    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold tracking-tight mb-2">{title}</h1>
    <p class="text-lg sm:text-xl text-gray-400 max-w-2xl mx-auto">
      {subtitle}
    </p>
  </div>

  <div class="h-8 w-8" aria-hidden="true"></div>
</header>
