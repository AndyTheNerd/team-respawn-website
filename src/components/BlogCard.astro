---
const {
  title,
  date,
  excerpt,
  href,
  category,
  dateIso,
  accentClass = 'text-yellow-400',
  buttonClass = 'bg-yellow-500 hover:bg-yellow-600'
} = Astro.props;
---
<article
  class="bg-gray-800 p-6 rounded-xl shadow-lg transform hover:scale-105 transition-transform duration-300"
  data-blog-post
  data-title={title}
  data-category={category}
  data-date={dateIso}
>
  <h2 class={`text-2xl font-bold mb-4 ${accentClass}`}>{title}</h2>
  <p class="text-gray-300 text-sm mb-2">{date}</p>
  {category && (
    <span class="inline-flex items-center text-xs font-semibold uppercase tracking-wide text-gray-300 bg-gray-700/60 px-2 py-1 rounded-full mb-3">
      {category}
    </span>
  )}
  <p class="text-gray-300 mb-4">{excerpt}</p>
  <a
    href={href}
    class={`inline-block ${buttonClass} text-white font-bold py-2 px-6 rounded-full transition-colors duration-300`}
  >
    Read More
  </a>
</article>
