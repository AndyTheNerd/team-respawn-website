---
interface Props {
  compact?: boolean;
}

const { compact = false } = Astro.props;
---

<div class={`flex text-gray-400 justify-center sm:justify-end ${compact ? 'space-x-2' : 'space-x-4'}`} role="list" data-compact={compact}>
  <a
    href="https://www.youtube.com/@TeamRespawn"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Visit Team Respawn on YouTube (opens in new tab)"
    class="hover:text-red-500"
    role="listitem"
  >
    <i class="fab fa-youtube fa-lg" aria-hidden="true"></i>
  </a>
  <a
    href="https://www.twitch.tv/TeamRespawnTV"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Visit Team Respawn on Twitch (opens in new tab)"
    class="hover:text-purple-500"
    role="listitem"
  >
    <i class="fab fa-twitch fa-lg" aria-hidden="true"></i>
  </a>
  <a
    href="https://discord.gg/TeamRespawn"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Join Team Respawn Discord server (opens in new tab)"
    class="hover:text-indigo-500"
    role="listitem"
  >
    <i class="fab fa-discord fa-lg" aria-hidden="true"></i>
  </a>
  <a
    href="https://www.teamrespawn.shop"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Visit Team Respawn shop (opens in new tab)"
    class="hover:text-green-400"
    role="listitem"
  >
    <i class="fas fa-shopping-cart fa-lg" aria-hidden="true"></i>
  </a>
</div>
